<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--container ini diberi bobot sama besar agar tampilan terbagi menjadi 3 sama besar    -->
    <!--ini adalah container dari kepala-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/Bodycoy"></FrameLayout>
        <!--&lt;!&ndash;ini adalah container dari kaki&ndash;&gt;-->
        <!--&lt;!&ndash;gunakan alt+enter untuk menyimpan warna&ndash;&gt;-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/Legcoy"></FrameLayout>
    </LinearLayout>
</RelativeLayout>